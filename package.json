{
	"name": "proshop",
	"version": "1.0.0",
	"description": "MERN Stack Web Application",
	"main": "server.js",
	"type": "module",
	"scripts": {
		"start": "node backend/server",
		"server": "nodemon backend/server",
		"client": "npm start --prefix frontend",
		"dev": "concurrently \"npm run server\" \"npm run client\"",
		"data:import": "node backend/seeder",
		"data:destroy": "node backend/seeder -d",
		"build": "NPM_CONFIG_PRODUCTION=false npm install --prefix frontend && npm run build --prefix frontend"
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/Murtaza-Vasi/Proshop.git"
	},
	"author": "Murtaza Vasi",
	"license": "ISC",
	"bugs": {
		"url": "https://github.com/Murtaza-Vasi/Proshop/issues"
	},
	"homepage": "https://github.com/Murtaza-Vasi/Proshop#readme",
	"dependencies": {
		"bcryptjs": "^2.4.3",
		"colors": "^1.4.0",
		"dotenv": "^8.2.0",
		"express": "^4.17.1",
		"express-async-handler": "^1.1.4",
		"jsonwebtoken": "^9.0.0",
		"mongoose": "^6.0.12",
		"morgan": "^1.10.0",
		"multer": "^1.4.2"
	},
	"devDependencies": {
		"concurrently": "^6.3.0",
		"nodemon": "^2.0.7"
	}
}
